# Environment variables for Smart LLM Routing

# OpenAI API Key (required)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (optional, if using Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Model Configuration
STRONG_MODEL=gpt-4-1106-preview
WEAK_MODEL=gpt-3.5-turbo

# RouteLLM Configuration
ROUTELLM_ROUTER=mf
ROUTELLM_THRESHOLD=0.5
ROUTELLM_CONFIG_PATH=

# Evaluator Configuration
EVALUATOR_MODEL_PATH=checkpoints/evaluator_best.pt
EVALUATOR_THRESHOLD=0.7
USE_EVALUATOR=true

# API Configuration
API_BASE=
TIMEOUT=120
MAX_CONCURRENT_REQUESTS=10

# Cost Configuration (USD per 1M tokens)
STRONG_MODEL_COST_INPUT=10.0
STRONG_MODEL_COST_OUTPUT=30.0
WEAK_MODEL_COST_INPUT=0.5
WEAK_MODEL_COST_OUTPUT=1.5
